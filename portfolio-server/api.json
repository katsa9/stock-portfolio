{
  "swagger": "2.0",
  "info": {
    "version": "v1",
    "title": "Stock Portfolio API",
    "description": "A simple api for managing a user's stock portfolio."
  },
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/portfolio": {
      "get": {
        "tags": [
          "Portfolio"
        ],
        "summary": "Retrieves the user's current stock portfolio",
        "operationId": "portfolio_get",
        "produces": [
          "application/json",
          "text/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Stock"
              }
            }
          }
        },
        "deprecated": false
      }
    },
    "/buy": {
      "put": {
        "tags": [
          "Portfolio"
        ],
        "summary": "Specifies a stock ticker and a number of shares to purchase",
        "operationId": "portfolio_buy",
        "produces": [
          "application/json",
          "text/json"
        ],
        "parameters": [
          {
            "name": "ticker",
            "in": "query",
            "required": true,
            "type": "string",
            "format": "int32"
          },
          {
            "name": "amount",
            "in": "query",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "deprecated": false
      }
    },
    "/sell": {
      "put": {
        "tags": [
          "Portfolio"
        ],
        "summary": "Specifies a stock ticker and a number of shares to sell",
        "operationId": "portfolio_sell",
        "produces": [
          "application/json",
          "text/json"
        ],
        "parameters": [
          {
            "name": "ticker",
            "in": "query",
            "required": true,
            "type": "string",
            "format": "int32"
          },
          {
            "name": "amount",
            "in": "query",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "deprecated": false
      }
    },
    "/credit": {
      "get": {
        "tags": [
          "Portfolio"
        ],
        "summary": "Returns the amount of credit the user has.",
        "operationId": "portfolio_credit",
        "produces": [
          "application/json",
          "text/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
                "$ref": "#/definitions/Credit"
            }
          }
        },
        "deprecated": false
      }
    },
    "/addCredit": {
      "put": {
        "tags": [
          "Portfolio"
        ],
        "summary": "Specifies the amount of money to add to the user's credit balance",
        "operationId": "portfolio_add_credit",
        "produces": [
          "application/json",
          "text/json"
        ],
        "parameters": [
          {
            "name": "amount",
            "in": "query",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "deprecated": false
      }
    }
  },
  "definitions": {
    "Stock": {
      "type": "object",
      "properties": {
        "ticker": {
          "type": "string"
        },
        "totalValue": {
          "format": "int32",
          "type": "number"
        },
        "shareCount": {
          "format": "int32",
          "type": "integer"
        }
      }
    },
    "Credit": {
      "type": "object",
      "properties": {
        "value": {
          "format": "int32",
          "type": "number"
        }
      }
    }
  }
}